<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true"> <!-- pressed -->
          <shape>
              <solid
                  android:color="#38C7FF" />
              <padding 
                  android:left="0dp"
                  android:right="0dp"
                  android:top="0dp"
                  android:bottom="0dp"/>
          </shape>
          </item>
    <item> <!-- default -->
        <shape>

            <solid
                android:color="#FFFFFF" />
            <stroke
                android:width="1dp"
                android:color="#DEDEDE" />
            <padding 
                  android:left="0dp"
                  android:right="0dp"
                  android:top="0dp"
                  android:bottom="0dp"/>
        </shape>
        </item>

</selector>